//Interface to seperate the Hardware
#ifndef IHARDWARE_H
#define IHARDWARE_H
#include "Global.h"

class IHardware
{
public:
	UInt16 getX1__dd_raw();
	UInt16 getX2__dd_raw();
	UInt16 getY1__dd_raw();
	UInt16 getY2__dd_raw();
	UInt16 getPhi1__d_raw();
	UInt16 getPhi2__d_raw();
	Int16 getPsi__d_raw();
	void openBrake();
	void closeBrake();
	void setTorque(const float torque);
};

#endif
