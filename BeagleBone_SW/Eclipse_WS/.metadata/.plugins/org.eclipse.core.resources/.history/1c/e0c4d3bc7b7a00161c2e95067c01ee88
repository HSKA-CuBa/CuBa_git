#include "CMessage.h"

CMessage::CMessage() :	mEvent(EEvent::EV_DEFAULT_IGNORE),
						mDataType(EDataType::DEFAULT_IGNORE),
						mPadding{0U},
					    mData{0U}
{

}
CMessage::CMessage(EEvent event,
				   EDataType dataType,
				   CSensorData data) : mEvent(event),
						   	   	   	   mDataType(dataType),
									   mPadding{0U},
						   	   	   	   mData{0U}
{
	union
	{
		UInt32 rawData[4];
		CSensorData sensorData = data;
	};
	sensorData = data;
	for(Int32 index = 0; index < 4; index++)
	{
		reinterpret_cast<UInt32*>(mData)[index] = rawData[index];
	}
}
CMessage::CMessage(EEvent event) : mEvent(event),
								   mDataType(EDataType::DEFAULT_IGNORE),
								   mPadding{0U},
								   mData{0U}
{

}
