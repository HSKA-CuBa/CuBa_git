#ifndef CPROXY_H
#define CPROXY_H
#include "CMessage.h"

class AComponentBase;

class CProxy
{
public:

	void registerCommComponent(IRunnable* commComponent);
	void registerControlComponent(IRunnable* controlComponent);
public:
	CProxy();
	CProxy(const CProxy&) = delete;
	CProxy& operator=(const CProxy&) = delete;
	~CProxy() = default;
private:
	IRunnable* commPtr;
	IRunnable* controlPtr;
};

#endif
