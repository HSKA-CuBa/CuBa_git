#include "AComponentBase.h"

AComponentBase::AComponentBase() : mQueue(),
								   mProxyPtr(nullptr),
								   mBufferPtr(nullptr)
{

}
bool AComponentBase::setBuffer(CDoubleBuffer& buffer)
{
	bool success = false;
	if(mBufferPtr == nullptr)
	{
		mBufferPtr = &buffer;
		success = true;
	}
	return success;
}
bool AComponentBase::setProxy(CProxy& proxy)
{
	bool success = false;
	if(mBufferPtr == nullptr)
	{
		mBufferPtgr = &buffer;
		success = true;
	}
	return success;
}
