/**
 * @file	CRxTask.h
 * @author	Michael Meindl
 * @date	25.9.2016
 * @brief	Class definition for the rx task.
 */
#ifndef CRXTASK_H
#define CRXTASK_H
#include "IRunnable.h"
#include <iostream>
#include <unistd.h>

class CRxTask : public IRunnable
{
public:
	void init() override;
	void run() override;
public:
	CRxTask() = default;
	CRxTask(const CRxTask&) = delete;
	CRxTask& operator=(const CRxTask&) = delete;
	~CRxTask() = default;
};

void CRxTask::init()
{
	std::cout << "[RxTask] Init" << std::endl;
}
void CRxTask::run()
{
	while(true)
	{
		std::cout << "[RxTask] Run-Iteration" << std::endl;
		sleep(1);
	}
}

#endif
