/**
 * @file	CCommFSM.h
 * @author	Michael Meindl
 * @date	28.9.2016
 * @brief	Class definition for the communication FSM.
 */
#ifndef CCOMMFSM_H
#define CCOMMFSM_H
#include "CMessage.h"

class CCommFSM
{
public:
	enum { STATE_DISCONNECTED, STATE_CONNECTED };
public:
	bool dispatch(CMessage& msg);
private:
	/**
	 * param[in] msg	Message holding the current event.
	 * return			Returns whether the event was consumed.
	 */
	bool onStateDisconnected(CMessage& msg);
	/**
	 * param[in] msg	Message holding the current event.
	 * return			Returns whether the event was consumed.
	 */
	bool onStateConnected(CMessage& msg);
};

#endif
