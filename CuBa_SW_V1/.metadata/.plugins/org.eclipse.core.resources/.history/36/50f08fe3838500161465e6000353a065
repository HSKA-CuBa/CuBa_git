#ifndef CCONTROLACTION_H
#define CCONTROLACTION_H
#include "Global.h"

class CControlAction
{
public:
	void onEntryStandby();
	void onExitStandby();

	void sampleE1();
	void sampleE2();
	void sampleE3();
	void sampleE4();
	void sampleE5();
	void sampleE6();
public:
	CControlAction();
	CControlAction(const CControlAction&) = delete;
	CControlAction& operator=(const CControlAction&) = delete;
	~CControlAction() = default;
private:

};

#endif
