#include "CReceiveTask.h"

CReceiveTask::CReceiveTask(CServer& server) : mServer(server),
											  mRunningSem(false, true)
{

}
void CReceiveTask::init()
{
	;
}
void CReceiveTask::run()
{
	while(true)
	{
		mRunningSem.take(true);
		mRunningSem.give();

	}
}
