#include "CTimerTask.h"
#include <iostream>
#include <unistd.h>

CTimerTask::CTimerTask(CProxy& proxy) : mRunningSem(true, true),
										mProxy(proxy)
{

}
void CTimerTask::init()
{
	std::cout << "[TimerTask] Initializing" << std::endl;
}
void CTimerTask::run()
{
	while(true)
	{
		mRunningSem.take(true);
		mRunningSem.give();
		usleep(20*1000);
		//TODO: Call proxy for timer tick
	}
}
