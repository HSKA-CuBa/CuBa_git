/**
 * @file CComponent.h
 */
#ifndef CCOMPONENT_H
#define CCOMPONENT_H
#include "IRunnable.h"
#include "CRxTask.h"

class CComponent : public IRunnable
{
public:
	void init() override;
	void run() override;
public:
	CComponent();
	CComponent(const CComponent&) = delete;
	CComponent& operator=(const CComponent&) = delete;
	~CComponent() = default;
private:
	CRxTask mRxTask;
	CThread mRxThread;
};

#endif
