#ifndef CCONTROLACTION_H
#define CCONTROLACTION_H
#include "Global.h"

class CControlAction
{
public:
	void onEntryStandby();
	void onExitStandby();
	void onEntryExperiment1();
	void onExitExperiment1();
	void onEntryExperiment2();
	void onExitExperiment2();
	void onEntryExperiment3();
	void onExitExperiment3();
	void onEntryExperiment4();
	void onExitExperiment4();
	void onEntryExperiment5();
	void onExitExperiment5();
	void onEntryExperiment6();
	void onExitExperiment6();
public:
	CControlAction();
	CControlAction(const CControlAction&) = delete;
	CControlAction& operator=(const CControlAction&) = delete;
	~CContorlAction() = default;
private:

};

#endif
